{
  "name": "my-juntas-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node node_modules/next/dist/bin/next dev",
    "dev:turbo": "next dev --turbo",
    "dev:force": "WATCHPACK_POLLING=true next dev",
    "build": "next build",
    "build:no-lint": "NEXT_DISABLE_ESLINT=1 next build",
    "build:static": "STATIC_EXPORT=true next build",
    "start": "next start",
    "clean": "rimraf .next",
    "clean:build": "rimraf .next && next build",
    "lint": "next lint",
    "test-db": "node lib/db/test-connection.js",
    "pre-deploy-check": "bash scripts/pre-deploy-check.sh",
    "vercel-build": "npm install --include=dev && npm run build",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration --runInBand",
    "test:security": "jest --testPathPattern=__tests__/security --runInBand",
    "test:performance": "jest --testPathPattern=__tests__/performance --runInBand",
    "test:performance:api": "jest --testPathPattern=__tests__/performance/api-response --runInBand",
    "test:performance:db": "jest --testPathPattern=__tests__/performance/database --runInBand",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:a11y": "playwright test e2e/accessibility/",
    "test:e2e:mobile": "playwright test e2e/mobile/",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --runInBand",
    "lighthouse": "lhci autorun --config=performance/lighthouserc.js",
    "loadtest": "k6 run performance/load-test.js",
    "loadtest:spike": "k6 run -e SCENARIO=spike performance/load-test.js",
    "loadtest:stress": "k6 run --out json=performance/results/stress.json performance/load-test.js",
    "perf:all": "npm run test:performance && npm run lighthouse"
  },
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@paypal/payouts-sdk": "^1.1.1",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.7",
    "esm": "^3.2.25",
    "fs-extra": "^11.3.0",
    "jsqr": "^1.4.0",
    "lucide-react": "^0.475.0",
    "mongodb": "^6.15.0",
    "mongoose": "^8.2.0",
    "next": "^14.2.31",
    "next-auth": "^4.24.11",
    "nodemailer": "^7.0.12",
    "path": "^0.12.7",
    "qrcode": "^1.5.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^2.15.2",
    "sharp": "^0.34.5",
    "speakeasy": "^2.0.0",
    "swr": "^2.3.8",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@eslint/eslintrc": "^3.3.1",
    "@faker-js/faker": "^8.4.1",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.0",
    "@types/nodemailer": "^6.4.14",
    "@types/qrcode": "^1.5.5",
    "@types/react": "18.3.23",
    "@types/react-dom": "^18",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mongodb-memory-server": "^11.0.1",
    "msw": "^2.12.7",
    "postcss": "^8",
    "rimraf": "^5.0.10",
    "supertest": "^7.2.2",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.4.6",
    "typescript": "5.8.3",
    "undici": "^7.18.2"
  }
}
